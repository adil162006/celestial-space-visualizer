<body>
  <div class="container-fluid iss-show py-5">
    <!-- Header -->
    <div class="row justify-content-center mb-4">
      <div class="col-12 col-md-10 col-lg-8">
        <div class="card p-4 border-0 shadow-sm text-center">
          <div class="card-body">
            <h1 class="display-5 fw-bold mb-3"> ISS Live Tracker</h1>
            <p class="lead fw-semibold">
              Track the International Space Station in real time as it orbits Earth.
            </p>
            <p class="text-muted">
              Below is a live map showing the ISS's current location based on public satellite tracking data.
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Map & Coordinates -->
    <div class="row justify-content-center gx-4">
      <!-- Map Column -->
      <div class="col-12 col-lg-8 mb-4">
        <div id="map" style="height: 600px; width: 100%; border-radius: 15px; overflow: hidden; box-shadow: 0 0 20px rgba(0,0,0,0.1);"></div>
      </div>

      <!-- Coordinates Column -->
      <div class="col-12 col-lg-4 d-flex align-items-center">
        <div class="card w-100 text-center p-4 shadow-sm border-0" style="border-radius: 15px;">
          <h4 class="fw-bold mb-3">üìç Current ISS Coordinates</h4>
          <p class="mb-2 fs-5">
            <strong>Latitude:</strong> <span id="lat"><%= data.latitude %></span>
          </p>
          <p class="mb-2 fs-5">
            <strong>Longitude:</strong> <span id="lon"><%= data.longitude %></span>
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Mapbox Script -->
  <script src="/js/map.js"></script>
</body>

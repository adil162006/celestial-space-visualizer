<% layout("/layouts/boilerplate") %>

<div class="container-fluid apod-show">
  <div class="row justify-content-center">
    <div class="col-12 col-md-10 col-lg-11 py-3 py-md-5">
      <div class="card p-3 p-md-5" style="border: none; box-shadow: none;">
        <div class="card-body text-center">
          
          <% if (error && error.length > 0) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <%= error %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% } %>

          <% if (success && success.length > 0) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
              <%= success %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% } %>
          <h1 class="display-5 fw-bold epic-header mb-3 mb-md-4">Earth Polychromatic Imaging Camera</h1>
          <p class="lead fw-bold">
              Witness Earth like never before with <strong>EPIC </strong> — your daily window into stunning real-time images of our home planet, captured by NASA's EPIC camera.
          </p>
            <p>
                Each day, we bring you breathtaking views of Earth from space, taken by the Earth Polychromatic Imaging Camera (EPIC) aboard NOAA’s DSCOVR satellite.
            </p>
            <p>
                From swirling cloud formations to the deep blues of oceans and greens of continents — Cosmos Daily helps you appreciate the dynamic beauty of Earth, one image at a time.
            </p>

          <form action="/epic/info" method="post" class="mt-5 needs-validation" novalidate>
            <div class="row justify-content-center">
              <div class="col-md-6">
                <label for="date" class="form-label fs-5">Select a Date</label>
                <input type="date" id="date" name="date" class="form-control form-control-lg mb-3" required>
                <div class="invalid-feedback">
                  Please select a date.
                </div>
              </div>
            </div>
            <button type="submit" class="btn btn-primary btn-lg px-4">Go</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

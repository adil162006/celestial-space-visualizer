<% layout("/layouts/boilerplate") %>

<div class="container-fluid apod-show">
  <div class="row justify-content-center">
    <div class="col-12 col-md-10 col-lg-11 py-5">
      <div class="card p-5" style="border: none; box-shadow: none;">
        <div class="card-body text-center">

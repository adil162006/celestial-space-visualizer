<% layout("/layouts/boilerplate") %>

<body>
  <div class="container mt-4">
    <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2 row-cols-lg-3 g-4">

      <% if (data.length === 0) { %>
        <div class="col-12">
          <div class="alert alert-warning text-center" role="alert">
            No rover images found for the selected date.
          </div>
        </div>
      <% } else { %>

        <% for (let info of data) { %>
          <div class="col">
            <div class="card h-100 shadow-sm">
                <img src="<%= info.img_src %>" class="card-img-top" alt=" Rover Image " style="height: 18rem; object-fit: cover;">

              <div class="card-body">
                <p class="card-text">
                  <strong>Date:</strong> <%= info.earth_date %><br>
                  <strong>Camera Name:</strong> <%= info.camera.full_name %>
                </p>
              </div>
            </div>
          </div>
        <% } %>

      <% } %>

    </div>
    <div class="mt-4">
  <a href="/rover" class="btn btn-outline-primary">
    &larr; Go Back
  </a>
</div>
  </div>
</body>
